# photon function
#
function sites() {
  # echo "âœ´ $1"
  # echo "$# args"
  # for arg in $@
  # do
    # echo "- $arg"
  # done

  if [ $1 ]
  then
    case $1 in
      new)
        cd ~/SITES
        ~/.photon/newsite.sh $2
        # if [ $2 ]
        # then
        #   echo "new $2"
        # else
        #   echo "new nada"
        # fi
        ;;
      *)
        cd ~/SITES/$1
        head -n 1 user/config/site.yaml
        source .photon
        git status -sb
        ;;

    esac
  else
    cd ~/SITES
    find . -maxdepth 1 -mindepth 1 -type d -exec sh -c '(echo {} && cd {} && git status -s && echo)' \;

  fi
}
