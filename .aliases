#!/usr/bin/env bash

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"

alias src="source ~/.bashrc"
alias C="src; clear -x"

alias timidity="timidity -c ~/.photon/timidity.cfg"

alias inmotion="ssh illumiphi.com"

alias dot="cd ~/.photon; folder;"
alias dots="cd ~/.photon/sites; folder; "
alias doti="cd ~/.photon/init; folder; "
alias dott="cd ~/.photon/tools; folder; "

alias gv="cd ~/.vim"
alias gm="cd /mnt/md0"

alias gD="cd ~/Downloads; "
alias gM="cd ~/Media"
alias gP="cd ~/Projects"
alias gPg="cd ~/Projects/GEOMETOR/explorer-notebooks; rd "
alias gS="cd ~/Sessions"
alias gN="cd ~/Notebooks"

alias open=xdg-open

alias v="vim"
alias vrc="vim ~/.vim/vimrc"
alias vbr="vim ~/.photon/.bashrc"
alias vpr="vim ~/.photon/.prompt"
alias val="vim ~/.photon/.aliases"
alias vfc="vim ~/.photon/.functions"
alias vrang="vim ~/.config/ranger/rc.conf"

alias r="ranger"

alias music="cd /mnt/md0/Music;A"

