#!/usr/bin/env bash

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"

alias fd="fdfind"

alias inmotion="ssh illumiphi.com"

alias port="cd ~/SITES/port-of-alsea.illumiphi.com/user; clear; site;"
alias presence="cd ~/SITES/presence/user; clear; site;"
alias photon="cd ~/SITES/photon-platform.net/user; clear; site;"

alias gdl="cd ~/Downloads;ls -1Ahst | head"

alias dot="cd ~/.photon;ls -A"
alias dotp="cd ~/.photon/photon;ls -A"
alias dotpp="cd ~/.photon/photon/pages;ls -A"
alias gpr="cd ~/Projects/;ls -hst"
alias gge="cd ~/Projects/geometor-explorer;ls -hst"
alias gyt="cd ~/youtube/;ls -hst"
alias gsnip="cd ~/.vim/Ultisnips/;ls"

alias dl="youtube-dl"

alias open=xdg-open

alias v="vim"
alias vrc="vim ~/.vimrc"
alias vbp="vim ~/.photon/.bash_profile"
alias val="vim ~/.photon/.aliases"
alias vfc="vim ~/.photon/.functions"
alias vrang="vim ~/.config/ranger/rc.conf"

alias skon="screenkey --scr 1 -p fixed -f 'Fira Mono' -s small -g 600x100+960+1748"
alias skoff="pkill -f screenkey"

alias src="source ~/.bashrc"

alias r="ranger"

colorflag="--color"
export LS_COLORS="no=00:\
fi=00:\
di=1;34:\
