# TODO: move these scripts
alias sub_plug="$PROJECT_DIR/sh/sub_plug.sh"
alias sub_theme="$PROJECT_DIR/sh/sub_theme.sh"


function pl() {
  if [ $1 ]
  then
    case $1 in
      *)
        cd "$PLUGINS_DIR/photon-$1"
        head -n 2 blueprints.yaml
        echo
        git status -sb

        ;;
    esac
  else
    cd $PLUGINS_DIR
    git status -sb
  fi
}
