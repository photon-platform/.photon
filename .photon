
# these variables are set withing the project .photon file

alias serve="php -S localhost:${PORT} system/router.php"
alias site="open ${SITE}"
alias admin="open ${SITE}/admin"

alias proj="cd ${PROJECT_DIR}"
alias themes="cd $THEMES_DIR"
alias plugins="cd $PLUGINS_DIR"

# TODO: move these scripts
alias sub_plug="$PROJECT_DIR/sh/sub_plug.sh"
alias sub_theme="$PROJECT_DIR/sh/sub_theme.sh"

alias dry-sync="rsync -auzvhP --stats --delete --dry-run user/ illumiphi.com:${SERVER_DIR}/user/"

alias sync="rsync -auzvhP --stats --delete user/ illumiphi.com:${SERVER_DIR}/user/"

alias full-sync="rsync -auzvhP --stats \
  --exclude .git \
  --exclude backup \
  --exclude images \
  --exclude cache \
  --exclude user/data/tntsearch/grav.index \
  --delete . illumiphi.com:${SERVER_DIR}/"


# photon function
#
function p() {
  echo "âœ´ $1"
  echo "$# args"
  for arg in $@
  do
    echo "- $arg"
  done

  case $1 in
    s)
      proj
      source .photon
      ;;
    new)
      if [ $2 ]
      then
        echo "new $2"
      else
        echo "new nada"
      fi
      ;;
    acp)
      git add .
      if [ $2 ]
      then
        git commit -m "$2"
      else
        git commit
      fi
      ;;
  esac

}
